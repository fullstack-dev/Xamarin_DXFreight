<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/consignmentdetailview">
    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#515966">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:src="@drawable/logo" />
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:text="Consignment Info"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:gravity="center"
                    local:MvxBind="Text ConsignmentinfoText" />
                <ImageButton
                    android:id="@+id/popupButton"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/more"
                    android:layout_gravity="center"
                    android:background="#515966"
                    local:MvxBind="Click MoreCommand" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:background="#2f3541"
                    android:gravity="left">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Special Instruction"
                        android:textColor="@android:color/white"
                        android:textSize="18dp"
                        android:gravity="center_vertical" />
                </LinearLayout>
                <TextView
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:gravity="left"
                    local:MvxBind="Text SpecialInstructionText" />
                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:background="#2f3541"
                    android:gravity="left">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Driver Alerts"
                        android:textColor="@android:color/white"
                        android:textSize="18dp"
                        android:gravity="center_vertical" />
                </LinearLayout>
                <TextView
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:gravity="left"
                    local:MvxBind="Text DriverAlertText" />
                <LinearLayout
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:background="#2f3541"
                    android:gravity="left">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Address Details"
                        android:textColor="@android:color/white"
                        android:textSize="18dp"
                        android:gravity="center_vertical" />
                </LinearLayout>
                <TextView
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:layout_weight="6"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:gravity="left"
                    local:MvxBind="Text AlertDetailsText" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_margin="2dp"
                android:gravity="bottom">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageButton
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/phone"
                        android:background="#515966"
                        local:MvxBind="Click PhoneCommand" />
                    <ImageButton
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/send"
                        android:background="#515966"
                        local:MvxBind="Click SendCommand" />
                    <ImageButton
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/check"
                        android:background="#515966"
                        local:MvxBind="Click CheckCommand" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>